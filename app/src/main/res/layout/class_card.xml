<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E1DA">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#000000">


                <TextView
                    android:id="@+id/card_classInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#92C7CF"
                    android:fontFamily="casual"
                    android:text=" Class Name:\n Instructor: \n ClassSection: \n ClassLocation: \n Repeat:\n StartTime:\n EndTime:\n\n"
                    android:textColor="@android:color/black"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/card_nav_btnAssignments"
                    android:layout_width="127dp"
                    android:layout_height="59dp"
                    android:layout_alignEnd="@+id/card_classInfoText"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="319dp"
                    android:layout_marginEnd="127dp"
                    android:background="#AAD7D9"
                    android:text="Assignments/Tasks"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/card_btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/card_classInfoText"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="330dp"
                    android:layout_marginEnd="20dp"
                    android:background="#AAD7D9"
                    android:text="Update"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/card_btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/card_classInfoText"

                    android:layout_alignEnd="@+id/card_classInfoText"
                    android:layout_marginTop="330dp"
                    android:layout_marginEnd="278dp"
                    android:background="#AAD7D9"
                    android:text="Delete"
                    android:textSize="17dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
