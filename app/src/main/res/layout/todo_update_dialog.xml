<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBFADA"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/dialog_assignmentTypeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7180F0"
                android:hint="Assignment Type"
                android:textColor="#FBFADA"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dialog_assignmentLocationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7180F0"
                android:hint="Submission Location/ Testing Location"
                android:textColor="#FBFADA"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dialog_dueDateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7180F0"
                android:hint="Due Date?"
                android:textColor="#FBFADA"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dialog_progressEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7180F0"
                android:hint="Progress"
                android:inputType="time"
                android:textColor="#FBFADA"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
