<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card_userInfoText"
                    android:layout_width="382dp"
                    android:layout_height="102dp"
                    android:background="#BFD8AF"
                    android:fontFamily="monospace"
                    android:text="User Info:\n"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/card_btnShowClasses"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_userInfoText"
                    android:layout_alignTop="@+id/card_userInfoText"
                    android:layout_alignEnd="@+id/card_userInfoText"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="206dp"
                    android:background="#99BC85"
                    android:text="Classes"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/card_btnDelete"
                    android:layout_width="152dp"
                    android:layout_height="48dp"
                    android:layout_alignTop="@+id/card_userInfoText"
                    android:layout_alignEnd="@+id/card_userInfoText"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="27dp"
                    android:background="#99BC85"
                    android:text="Delete User"
                    android:textSize="24dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
