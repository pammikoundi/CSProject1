<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8B7E74"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:padding="10dp">

                <TextView
                    android:id="@+id/activity_assignmentInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#65647C"
                    android:fontFamily="casual"
                    android:text=" Assignment Name:\n Assignment Class:\n Assignment Type:\n Location:\n Due Date:\n Progress:\n Complete:\n\n"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/activity_nav_btnUpdate"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_assignmentInfoText"
                    android:layout_alignEnd="@+id/activity_assignmentInfoText"
                    android:layout_marginTop="-70dp"
                    android:layout_marginEnd="43dp"
                    android:background="#C7BCA1"
                    android:text="Update"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/activity_btnBack"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_nav_btnUpdate"
                    android:layout_alignEnd="@+id/activity_assignmentInfoText"
                    android:layout_marginTop="-47dp"
                    android:layout_marginEnd="221dp"
                    android:background="#C7BCA1"
                    android:text="Back" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
