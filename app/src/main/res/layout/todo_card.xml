<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7180F0"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card_assignmentNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Assignment Name: "
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/card_btnviewDetails"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_assignmentNameText"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/card_checkComplete"
                    android:background="#FFFFFF"
                    android:text="View Details"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/card_checkComplete"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_assignmentNameText"
                    android:layout_alignParentStart="true"
                    android:checked="false"
                    android:text="Mark Complete" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
